<div class="contenedor" >   
  <article class="wallpaper2"><img src="/imagenes/Wallpapaer.jpg" alt="wallpapaer">     
  </article>
  
  <div class= "principal2"> 
    <form  action="<%=usuarios.id%>" method="post" enctype="multipart/form-data"> 
      <div class= "titulo2"><h1> Editar Regístro</h1> 
      </div>
      
      <div class= "nombreus"> 
        <i class="far fa-user"></i>
        <label for="nombre" class="datos_login" data-icon="u" > Nombre </label><br>
        <input id="nombre" name="nombre" required="required"  value="<%=usuarios.nombre%>" type="text"  placeholder="juan"/>
        <small id= "errornombre"></small>
      </div><br>

      <div class= "apellidous"> 
        <i class="far fa-user"></i>
        <label for="apellido" class="datos_login" data-icon="u" > Apellido </label><br>
        <input id="apellido" name="apellido" required="required"  value="<%=usuarios.apellido%>" type="text"  placeholder="lopez"/>
        <small id= "errorapellido"></small>
      </div><br>
   

      <div class= "name3"> 
        <i class="fas fa-id-card"></i>
        <label for="username" class="datos_login" data-icon="u" > Cómo quieres llamarte? </label><br>
        <input id="username" name="username" required="required" value="<%=usuarios.username%>" type="text" placeholder="brucewayne"/>
      </div><br>
  
      <div class="date2">
        <i class="far fa-calendar-alt"></i>
        <label for="date" class="datos_login">Cuando naciste?</label><br>
        <input id="date" name="date" type="date" value="<%=usuarios.date%>">
      </div><br>
         
      <div class="email2">
        <i class="far fa-envelope"></i>
        <label for="email" class="datos_login" data-icon="p">Email</label><br>
        <input id="email2" name="email" value="<%=usuarios.email%>" placeholder="brucewayne@gmail.com" required>
      </div><br>  
      

      <div class= "imagenR">
        <label for="">Subí tu selfie !!</label> <br>
        <input id="image" type="file" name="image" value="<%=usuarios.image%>">
      </div>  <br>
                      

                          
      <div class= "registro2"><button class="logButton" type=“submit”>Editar</button>
      </div><br><br><br>

     
    </form>  
  </div>


